.extras {
    display: none;
    margin-top: 25px;
}

.grid {
    .tick {
        stroke: #eee;
    }
    path {
        stroke-width: 0;
    }
}

.bars {
    .bar-wrapper {
        margin: 35px 45px 0 0;
        font-size: 13px;
        float: left;
        width: 290px;
        ul {
            list-style: none;
        }
        li {
            width: 282px;
        }
        &.double {
            margin-right: 25px;
            &:nth-child(2) {
                margin-right: 0;
                float: right;
            }
            li {
                width: 458px;
            }
        }
        &.double, &.double ul {
            width: 465px;
        }
        &.single {
            width: 100%;
            float: none;
            li {
                width: 952px;
            }
            .heading {
                display: none;
            }
        }
        &:nth-child(3n) {
            margin-right: 0;
        }
    }
    li {
        height: 25px;
        position: relative;
        margin-top: 1px;
        &:nth-child(odd) {
            background-color: #eee;
        }
    }
    time {
        position: absolute;
        left: 5px;
        top: 4px;
        z-index: 10;
    }
    em {
        position: absolute;
        right: 0;
        font-style: normal;
        margin: 4px 8px 0 0;
        z-index: 10;
    }
    span {
        display: inline-block;
        height: 25px;
    }
    .heading {
        text-align: center;
        margin-bottom: 10px;
    }
}
